    color: #333;
    border-radius: 8rpx;
    margin-top: 0;
    position: relative;
    top: -900rpx;
    z-index: 1000;
  }
  
  .sub-answer {
    margin-top: 8px;
    color: #999;
    font-size: 12px;
  }
  
  /* 活动列表样式 */
  .activity-item {
    padding: 12px;
    margin: 10px;
    background: #fff;
    border-radius: 8px;
    display: flex;
    align-items: center;
  }
  
  .date {
    color: #e54d42;
    font-weight: bold;
    flex: 1;
  }
  
  .location {
    flex: 2;
    color: #666;
  }
  
  .status {
    flex: 1;
    text-align: right;
    color: #09bb07;
  }
  
  .nav-title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    height: 20rpx;
  }
  
  .nav-arrow{
